/**index.wxss**/
 .page__hd{
  width: 100%;
  height: 130rpx;
  background: #98c8d1;
} 
.page__hd_search{
  width: 540rpx;
  height: 80rpx;
  background: #99a6cf;
  border-radius: 40rpx;
  font-size: 32rpx;
  color: #fff;
  margin: 0 auto;
  text-align: center;
}
.weui-tab__panel{
  padding-top: 0rpx;
}
.weui-navbar{
  height: 90rpx;
  background: #fff;
  position: fixed;
  top: 130rpx;
  left: 0;
}
.weui-navbar__title{
  font-size: 28rpx;
  height: 90rpx;
  line-height: 90rpx;
  /* color: #999999; */
}
.page__hd_search image{
  width: 38rpx;
  height: 44rpx;
  margin-left: 10rpx;
}
.page__ft_desc{
  font-size: 28rpx;
  color: #666666;
  margin:0 15rpx;
}
.page__ft_line{
  width: 100rpx;
  height: 5rpx;
  border-top: 1px solid #dddddd;
}
.page__ft_btn{
  width: 600rpx;
  height: 90rpx;
  border-radius: 45rpx;
  border: 1px solid #F788AB;
  color: #F788AB;
  outline: 0;
  font-size: 32rpx;
  list-style-type:none;
  background: #fff;
  list-style: none;
  box-sizing: border-box;
}
.page__ft_btn image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.page__ft{
  padding-bottom: 98rpx;
}
.page__ft_info{
  margin-top: 80rpx;
  margin-bottom: 40rpx;
}
swiper{
  text-align: center;
  display: flex;
  justify-content: center;
  align-content: center;
  height:900rpx;
   -webkit-overflow-scrolling: touch; 
}
swiper-item{
  overflow-y: scroll;
}
.swiper-tab{
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom:1rpx solid #ededed;
}
.swiper-tab-item{
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  height: 90rpx;
  color: #999;
  line-height: 90rpx;
}
.active{
  color: #f65959;
}