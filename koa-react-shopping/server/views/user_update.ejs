<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
</head>
<body>
    <div>
        <h1><%= title %></h1>
        <form action="/user/update/<%= userInfo.uid %>" method="POST">
            <input type="text" name="username" placeholder="姓名" value="<%= userInfo.username %>" /><br/>
            <input type="text" name="nickname" placeholder="昵称" value="<%= userInfo.nickname %>" /><br/>
            <input type="text" name="gender" placeholder="性别" value="<%= userInfo.gender %>" /><br/>
            <input type="text" name="mobile" placeholder="电话" value="<%= userInfo.mobile %>" /><br/>
            <input type="text" name="openId" placeholder="openid" value="<%= userInfo.openId %>" /><br/>
            <input type="text" name="avatarUrl" placeholder="头像" value="<%= userInfo.avatarUrl %>" /><br/>
            <input type="text" name="introduce_id" value="1" value="<%= userInfo.introduce_id %>" hidden /><br/>
            <input type="text" name="academy" placeholder="学院" value="<%= userInfo.academy %>" /><br/>
            <input type="text" name="major" placeholder="专业" value="<%= userInfo.major %>" /><br/>
            <input type="submit" value="提交" />
        </form>
    </div>
</body>
</html>
